  "author": "Brian Schiller <bgschiller@gmail.com> (https://brianschiller.com)",
  "contributors": [
    "Brian Schiller <bgschiller@gmail.com> (https://brianschiller.com)"
  ],
  "dependencies": {
    "chalk": "^4.1.0",
    "json-schema-ref-parser": "^9.0.1",
